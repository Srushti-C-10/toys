<UserControl
    x:Class="Peek.UI.Views.TitleBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Peek.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="TitleBarRootContainer" Height="48">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            x:Name="AppIconAndName"
            Grid.Column="0"
            Margin="16,8,8,8"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <!--  Todo P1: Use Peek's logo  -->
            <Image
                x:Name="PeekLogo"
                x:Uid="PeekLogo"
                Source="../Assets/AppList.png" />

            <!--  Todo P1: Change AppTitleText to reflect file name  -->
            <TextBlock
                x:Uid="AppTitleText"
                Margin="12,0,0,0"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind File.FileName, Mode=OneWay}" />
        </StackPanel>

        <!--  Todo P0: Make button clickable  -->
        <!--  Todo P2: Adaptive width - shrink text?  -->
        <!--  Todo P2: Localization  -->
        <Grid
            x:Name="LaunchAppButtonContainer"
            Grid.Column="1"
            Margin="4,4,144,4"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Button x:Name="LaunchAppButton" Click="Button_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="4,0"
                            FontSize="{StaticResource CaptionTextBlockFontSize}"
                            Glyph="&#xE8E5;" />
                        <TextBlock
                            Margin="4,0"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind OpenWithApp, Mode=OneWay}" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
    </Grid>
</UserControl>
