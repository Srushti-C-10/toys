<Application x:Class="FancyZonesEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FancyZonesEditor"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="pack://application:,,,/Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="GridLayoutPreviewStyle" TargetType="Rectangle">
                <Setter Property="Fill" Value="{DynamicResource LayoutPreviewZoneBackgroundBrush}" />
                <Setter Property="Stroke" Value="{DynamicResource LayoutItemBackgroundBrush}" />
                <Setter Property="StrokeThickness" Value="1" />
            </Style>

            <Style x:Key="GridLayoutPreviewActualSizeStyle" TargetType="Rectangle">
                <Setter Property="Fill" Value="{DynamicResource LayoutPreviewZoneBackgroundBrush}" />
                <Setter Property="Stroke" Value="{DynamicResource LayoutPreviewZoneBorderBrush}" />
                <Setter Property="StrokeThickness" Value="1" />
            </Style>

            <Style x:Key="CanvasLayoutPreviewStyle" TargetType="Rectangle">
                <Setter Property="Fill" Value="{DynamicResource LayoutPreviewZoneBackgroundBrush}" />
                <Setter Property="Stroke" Value="{DynamicResource LayoutItemBackgroundBrush}" />
                <Setter Property="StrokeThickness" Value="10" />
            </Style>

            <Style x:Key="CanvasLayoutPreviewActualSizeStyle" TargetType="Rectangle">
                <Setter Property="Fill" Value="{DynamicResource LayoutPreviewZoneBackgroundBrush}" />
                <Setter Property="Stroke" Value="{DynamicResource LayoutPreviewZoneBorderBrush}" />
                <Setter Property="StrokeThickness" Value="1" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
