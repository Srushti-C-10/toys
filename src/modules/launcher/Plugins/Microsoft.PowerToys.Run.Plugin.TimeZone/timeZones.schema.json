{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "TimeZones": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [ "Offset" ],
                "properties": {
                    "Offset": {
                        "type": "string",
                        "description": "The time offset of this time zone (the gap from the UTC time zone, must convertible to a C# TimeSpan)"
                    },
                    "Names": {
                        "type": "array",
                        "description": "A list with names of this time zone.",
                        "uniqueItems": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "Shortcut": {
                        "type": "array",
                        "description": "A list with shortcuts of the names this time zone.",
                        "uniqueItems": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "Countries": {
                        "type": "array",
                        "description": "A list with all countries in this time zone that don't use a daylight saving time.",
                        "uniqueItems": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "DstCountries": {
                        "type": "array",
                        "description": "A list with all countries in this time zone that use a daylight saving time.",
                        "uniqueItems": true,
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
