<Page
    x:Class="Microsoft.PowerToys.Settings.UI.Flyout.LaunchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedVisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:controls="using:Microsoft.PowerToys.Settings.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Microsoft.PowerToys.Settings.UI.Flyout"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkitControls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:viewModels="using:Microsoft.PowerToys.Settings.UI.ViewModels"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
          Padding="0,12"
          RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- header + button -->
        <Grid
            Grid.Row="0"
            Padding="12,0"
            ColumnSpacing="12"
            HorizontalAlignment="Stretch">
            <TextBlock
                x:Uid="ShortcutsTxt"
                Grid.Column="0"
                VerticalAlignment="Center"
                Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <Button
                x:Uid="MoreBtn"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Click="AllAppButton_Click">
                <Button.Content>
                    <StackPanel
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="12">
                        <TextBlock x:Uid="MoreLabel" Style="{StaticResource CaptionTextBlockStyle}" />
                        <FontIcon
                            VerticalAlignment="Center"
                            FontSize="12"
                            Glyph="&#xe76c;" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
        <ItemsControl
            Grid.Row="1"
            Padding="12,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            ItemsSource="{x:Bind ViewModel.FlyoutMenuItems}"
            TabNavigation="Local">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <toolkitControls:WrapPanel VerticalSpacing="12" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="viewModels:FlyoutMenuItem">
                    <controls:FlyoutMenuButton
                        Click="ModuleButton_Click"
                        Tag="{x:Bind Tag}"
                        AutomationProperties.Name="{x:Bind Label}"
                        ToolTipService.ToolTip="{x:Bind ToolTip}"
                        Visibility="{x:Bind Visible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisibilityConverter}}">
                        <controls:FlyoutMenuButton.Content>
                            <TextBlock
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind Label}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </controls:FlyoutMenuButton.Content>
                        <controls:FlyoutMenuButton.Icon>
                            <Image>
                                <Image.Source>
                                    <BitmapImage UriSource="{x:Bind Icon, Mode=OneWay}" />
                                </Image.Source>
                            </Image>
                        </controls:FlyoutMenuButton.Icon>
                    </controls:FlyoutMenuButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <!-- bottom buttons -->
        <Grid
            Grid.Row="2"
            Padding="12,0">
            <InfoBar
                Grid.Row="0"
                x:Uid="UpdateAvailable"
                IsClosable="False"
                Severity="Informational" />
                <!--IsOpen="{x:Bind ViewModel.IsUpdateAvailable, Mode=OneWay}"-->

            <CommandBar
                Grid.Row="1"
                HorizontalAlignment="Right"
                OverflowButtonVisibility="Collapsed">
                <AppBarButton
                    x:Name="DocsBtn"
                    x:Uid="DocsBtn"
                    Icon="Document"
                    Click="DocsBtn_Click">
                    <ToolTipService.ToolTip>
                        <TextBlock x:Uid="DocsTooltip"/>
                    </ToolTipService.ToolTip>
                </AppBarButton>
                <AppBarButton
                    x:Name="ReportBugBtn"
                    x:Uid="BugReportBtn"
                    Click="ReportBugBtn_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEBE8;"/>
                    </AppBarButton.Icon>
                    <ToolTipService.ToolTip>
                        <TextBlock x:Uid="BugReportTooltip"/>
                    </ToolTipService.ToolTip>
                </AppBarButton>
                <AppBarButton
                    x:Name="SettingsBtn"
                    x:Uid="SettingsBtn"
                    Click="SettingsBtn_Click"
                    Icon="Setting">
                    <ToolTipService.ToolTip>
                        <TextBlock x:Uid="SettingsTooltip"/>
                    </ToolTipService.ToolTip>
                </AppBarButton>
                <!--<AppBarSeparator />
                <AppBarButton
                    x:Name="QuitBtn"
                    Style="{StaticResource FlyoutButtonStyle}"
                    ToolTipService.ToolTip="Quit"
                    Click="QuitButton_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8BB;"/>
                    </AppBarButton.Icon>
                </AppBarButton>-->
            </CommandBar>
        </Grid>
    </Grid>
</Page>
